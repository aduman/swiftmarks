<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
  <title>Swiftmarks</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  
  <div id="wrapper">
    <div id="header">
      <%= link_to "Swiftmarks", root_url, :id => "logo" %>
      
      <% if current_user %>
        <div id="navigation">
          <%= link_to "Bookmarklet", bookmarklet_url %>
          <span class="pipe">|</span>
          <%= link_to "Import", import_bookmarks_url %>
          <span class="pipe">|</span>
          <%= link_to 'Logout', user_session_path, :method => :delete, :id => "logout-link" %>
        </div>
      <% end %>
    </div>

    <div id="separator"></div> 

    <div id="sidebar">
      <%= yield :sidebar %>
    </div>

    <div id="content">
      <%= yield %>
    </div>
  </div>

</body>
</html>
