<%= form_for @bookmark do |f| %>
  <p>
    <%= f.label :url %><br/>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, :size => "30x3" %>
  </p>
  <p>
    <%= f.label :tag_list, "Tags" %><br/>
    <%= f.text_field :tag_list %>
  </p>

  <%= hidden_field_tag :source, params[:source] %>

  <p>
    <%= submit_tag "Save" %>
  </p>
<% end %>
