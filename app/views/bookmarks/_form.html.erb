<% form_for @bookmark do |f| %>
  <p>
    <%= f.label :url %><br/>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= submit_tag "Save" %>
  </p>
<% end %>
